{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./init",
        "outDir": "../../dist/toolchain",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "libts": ["../libts/"]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "webworker",
            "scripthost"
        ],
        "rootDirs": ["../libs/libts/includes", "src"]
    },
    "include": [
        "../libs/libts/includes/libts.d.ts",
        "../public/**/*.ts",
        "cat/src/**/*.ts",
        "init/src/**/*.ts",
        "login/src/**/*.ts",
        "psh/src/**/*.ts"
    ],
    "exclude": [

    ]
}
